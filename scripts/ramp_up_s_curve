alias: Aquarium Ramp Up - S-Curve
variables:
  delay_time: "00:00:01"   # Frequency of light adjustments
  step_count: 100          # Number of light adjustment steps
  steepness: 2             # Adjusts the ramp steepness. A steepness of 1.6 closely approximates sine-squared
  peak_brightness:         # Sets the maximum brightness for each LED channel (R, G, B, and W)
    - 255
    - 235
    - 221
    - 255
sequence:
  - repeat:
      count: "{{ step_count }}"
      sequence:
        - data_template:
            entity_id: light.[your-light-id]
            rgbw_color:
              - >-
                {% set t = repeat.index / step_count %} {% set numerator =
                t**steepness %} {% set denominator = t**steepness + (1 -
                t)**steepness %} {{ ((numerator / denominator) *
                peak_brightness[0]) | int }}
              - >-
                {% set t = repeat.index / step_count %} {% set numerator =
                t**steepness %} {% set denominator = t**steepness + (1 -
                t)**steepness %} {{ ((numerator / denominator) *
                peak_brightness[1]) | int }}
              - >-
                {% set t = repeat.index / step_count %} {% set numerator =
                t**steepness %} {% set denominator = t**steepness + (1 -
                t)**steepness %} {{ ((numerator / denominator) *
                peak_brightness[2]) | int }}
              - >-
                {% set t = repeat.index / step_count %} {% set numerator =
                t**steepness %} {% set denominator = t**steepness + (1 -
                t)**steepness %} {{ ((numerator / denominator) *
                peak_brightness[3]) | int }}
          action: light.turn_on
        - delay: "{{ delay_time }}"
description: >-
  Gradually ramps light brightness from off to the specified peak RGBW color
  using a rational S-curve.
